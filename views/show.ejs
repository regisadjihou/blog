
<%- include("partials/header") %>
<div class="ui main text container segment">
<div class="ui huge header"><%= blogshow.title %></div>	

<div class="ui top attached">
	<div class="item">
	<img class="ui centered rounded image" src="<%=blogshow.image%>">	

	<div class="content"><span><%= blogshow.created.toDateString() %></span></div>
	</div>

